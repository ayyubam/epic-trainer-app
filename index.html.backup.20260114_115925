    // ==================== API URL HELPER ====================
    function getApiUrl(endpoint) {
        if (window.location.hostname === 'localhost' || window.location.hostname === '127.0.0.1') {
            return `http://localhost:3000/${endpoint}`;
        }
        return `/.netlify/functions/${endpoint}`;
    }
    
